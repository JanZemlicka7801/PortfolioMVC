@model PortfolioMVC.Models.DTOs.TeamMemberDto

@{
    ViewData["Title"] = "Delete Team Member";
}

<div class="container py-4">
    <h1 class="display-4 mb-4">Delete Team Member</h1>

    <div class="alert alert-danger mb-4">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this team member? This action cannot be undone.</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-light">
            <h3 class="card-title mb-0">@Model.Name</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">@Model.Role.ToString()</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Project</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectId">
                                View Project
                            </a>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
        </div>
    </form>
</div>